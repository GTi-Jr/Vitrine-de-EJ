<%= render 'layouts/adminheadmenu' %>
<div id="layout-container">
  <div id="main">  
    <div class="head-title">
    </div>
    <div class="menu-switch">
      <i class="fa fa-bars"></i>
    </div>
    <div class="row">
      <div class="col-md-12"></div>
    </div>
    <div class="margin-container">
      <div class="scrollable wrapper">
        <div class="row">
          <div class="col-md-12">
            <div class="page-heading">
              <h1>Membros</h1>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="box-info">
            <a href="/admin/members/new" class="btn btn-primary">Novo Membro</a>
              <table class="table table-bordered">
                <thead>
                  <tr>
                    <th>Nome</th>
                    <th>Cargo</th>
                    <th>Empresa</th>
                    <th>Telefone</th>
                    <th>E-mail</th>
                    <th>Foto</th>                    
                    <th></th>                    
                    <th></th>
                  </tr>
                </thead>
                <tbody>
                  <% @members.each do |m| %>
                    <tr>
                      <td><%= m.name %></td>
                      <td><%= m.position %></td>
                      <% if m.junior_enterprise_id == nil %>
                        <td></td>
                      <% else %>
                        <td><%= JuniorEnterprise.find(m.junior_enterprise_id).name %></td>
                      <% end %>
                      <td><%= m.phone %></td>
                      <td><%= m.email %></td>
                      <td><%= image_tag(m.photo, style: "width:120px; height:120px ") %></td>
                      <td style="text-align:center"><a href="/admin/members/edit/<%= m.id %>" class="btn btn-warning" type="button">Editar</a></td>
                      <td style="text-align:center"><a href="/admin/members/delete/<%= m.id %>" class="btn btn-danger" type="button">Deletar</a></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
          <%= paginate @members %>
        </div>
      </div>
    </div>
    </div>
</div>