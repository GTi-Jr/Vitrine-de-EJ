<div id="layout-container">
  <%= render 'layouts/lateralmenu' %>
  <div id="main">  
    <%= render 'layouts/headmenu' %>
      <div class="margin-container">
        <div class="scrollable wrapper">
          <div class="row">
            <div class="col-md-12">
              <div class="page-heading">
                <h1>Mensagens</h1>
              </div>
            </div>
          </div>
          <div class="row">
                <div class="profile-info col-lg-9 col-lg-offset-1">                        
                    <div class="panel">
                      <div class="bio-graph-heading">
                        <h3>
                          <%= current_user.junior_enterprise.phrase %> 
                        </h3>
                      </div>
                      <div class="panel-body bio-graph-info">
                        <div id="accordion3" class="panel-group accordion accordion-semi">
                          <% @i = 0 %>
                          <% @messages.each do |m| %>
                            <div class="panel panel-default">
                              <div class="panel-heading">
                                <h4 class="panel-title"> <a href="#ac<%= @i %>" data-parent="#accordion3" data-toggle="collapse" class="collapsed"> <i class="fa fa-angle-right"></i> <%= m["name"] %> </a> </h4>
                              </div>
                              <div class="panel-collapse collapse" id="ac<%= @i %>">
                                <div class="panel-body"> <%= m["text"] %> </div>

                                <div class="panel-body">Contato: 
                                  <p>Telefone: <%= m["phone"]%></p>
                                  <p>E-Mail: <%= m["email"] %></p>
                                </div>

                                <a class="btn btn-warning pull-right" style="margin: 5px"  href="messages/<%= m["id"] %>" data-method="delete"> Deletar </a>
                              </div>
                            </div>
                            <% @i = @i + 1 %>
                          <% end %>
                          <div class="pull-right">
                            <%= paginate @messages %>
                          </div>
                        </div>
                      </div>
                    </div>
                </div>
            </div>   
        </div>
      </div>
    </div>
</div>
