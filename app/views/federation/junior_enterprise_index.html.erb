<div id="layout-container">
  <div id="main" style="left: 0px !important;">  
    <%= render 'layouts/federationheadmenu' %>
  <div class="menu-switch">
    <i class="fa fa-bars"></i>
  </div>
  <div class="row">
    <div class="col-md-12">
    </div>
  </div>
  <div class="margin-container">
    <div class="scrollable wrapper">
      <div class="row">
        <div class="col-md-12">
          <div class="page-heading">
          </div>
        </div>
      </div>
      <div class="row">
        <div class="profile-info col-lg-9 col-lg-offset-1">                  
          <div class="panel">
            <div class="bio-graph-heading">
              <h3>Ser Junior no brasil Ã© ser gigante pela propria natureza</h3>
            </div>
            <div class="panel-body bio-graph-info">
              <div id="accordion3" class="panel-group accordion accordion-semi">
                <% @i = 0 %>
                <% @je.each do |je| %>
                  <div class="panel panel-default">
                    <div class="panel-heading">
                      <h4 class="panel-title"> <a href="#ac<%= @i %>" data-parent="#accordion3" data-toggle="collapse" class="collapsed"> <i class="fa fa-angle-right"></i> <%= je.name %> </a> </h4>
                    </div>
                    <div class="panel-collapse collapse" id="ac<%= @i %>">
                      <div class="panel-body"> <%= je.description %> </div>
                      <button onclick="window.location.href='/junior_enterprise/<%= je.id %>'" class="btn btn-success" data-toggle="button"><i class="fa fa-plus"></i> </button>

                      <% if je.seal %>
                        <button onclick="window.location.href='/junior_enterprises/<%= je.id %>/seal'" class="btn btn-info" data-toggle="button"> Ativar Selo EJ</button>
                      <% else%>
                        <button onclick="window.location.href='/junior_enterprises/<%= je.id %>/seal'" class="btn btn-danger" data-toggle="button"> Desativar Selo EJ</button>
                      <% end %>
                    </div>
                  </div>
                  <% @i = @i + 1 %>
                <% end %>
                <div class="pull-right">
                  <%= paginate @je %>
                </div>
              </div>
            </div>
            <a href="/find" class="btn btn-info btn-block" style="width: 10%; margin-left: 1%;">Retornar</a>
          </div>
        </div>
      </div>
    </div>   
  </div>
</div>
<style>
  .bio-row {width:25%; text-align:center;}
</style>

