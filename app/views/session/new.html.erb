<%= render 'layouts/minimenu' %>
<div class="container login-bg">
	<div class="login-form-signin">
  	<div class="login-logo"><%= image_tag("logo.png") %></div>
    <div class="login-wrap">
      <%= form_tag do %>
        <div class="form-group has-feedback lg left-feedback no-label">
          <%= text_field_tag :email, params[:email], class: "form-control", placeholder: "Email" %>
        </div>
        <div class="form-group has-feedback lg left-feedback no-label">
          <%= password_field_tag :password, params[:password], class: "form-control", placeholder: "Password" %>
        </div>

        <p><%= link_to "Esqueci a senha", recover_path %></p>

        <button type="submit" class="btn btn-lg btn-primary btn-block">Log in</button>
      <%end%>

      <form method="get" action="/users/new">
        <button class="btn btn-success btn-block">Cadastrar</button>
      </form>
    </div>    
    <div class="login-logo"><%= link_to "Feedback", "/feedback" %></div>
  </div>
</div>

<script>
  $("#email").inputmask({ alias: "email"});
</script>

