<div id="layout-container">
  <%= render 'layouts/lateralmenu' %>
  <div id="main">  
    <%= render 'layouts/headmenu' %>
    <div class="margin-container">
    <div class="scrollable wrapper">
      <div class="row">
        <div class="col-md-12">
          <div class="page-heading">
            <h1><b>Adicionar ao Time</b></h1>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-9">
          <div class="box-info">
            <table align="center" border="0" cellpadding="0" cellspacing="0">
              <tbody>
              <tr>
                <td>
                  <div>
                    <div id="wizard" class="swMain">

                          <%= form_for(@member) do |f| %>
                            <% if @member.errors.any? %>    
                              <% @member.errors.full_messages.each do |msg| %>
                                <div class= "alert alert-danger">
                                  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                  <%= msg %>
                                </div>
                              <% end %>    
                          <% end %>
                          <ul class="anchor">
                            <li>
                              <a class="selected">
                                <span class="stepDesc">Dados<br></span>
                              </a>
                            </li>
                          </ul>
                          <div id="step-1" style="display: block; left: 0px;">
                            <table cellspacing="3" cellpadding="3" align="center">
                              <tbody>
                                <tr>
                                  <td align="center" colspan="3">&nbsp;</td>
                                </tr>
                                <tr>
                                  <td align="right">Nome</td>
                                  <td align="left">
                                    <%= f.text_field :name, class: "txtBox", placeholder: "Nome"  %>
                                  </td>
                                </tr>
                                <tr>
                                  <td align="right">Cargo</td>
                                  <td align="left">
                                    <%= f.text_field :position, class: "txtBox", placeholder: "Cargo"  %>
                                  </td>
                                </tr>
                                <tr>
                                  <td align="right">Foto</td>
                                  <td align="left">
                                    <%= f.file_field :photo, class: "txtBox" %>
                                  </td>
                                </tr>
                              </tbody>
                            </table>
                          </div>
                          <br>
                          <div class="stepContainer" style="height: 179px;"></div>
                          <div class="actionBar">
                            <%= submit_tag "Adicionar",:class=> 'buttonFinish'%>
                          </div>
                        <% end %>                        
                      </td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>